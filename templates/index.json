        "row_A6feW8": {
          "type": "row",
          "settings": {
            "image": "shopify://shop_images/250726_ren_web_photo_4.png",
            "image_sp": "shopify://shop_images/250726_ren_web_photo_15.png",
            "image_and_text_gap": 5,
            "caption": "",
            "heading": "Roots",
            "heading_color": "rgba(255,255,255,1)",
