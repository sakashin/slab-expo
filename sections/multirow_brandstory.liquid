.products-{{ block.id }} .content .image {
  position: relative;
}

/* 画像を絶対配置でフィット */
.products-{{ block.id }} .content .image img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* SP用のアスペクト比指定 */
