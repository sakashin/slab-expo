{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-repeat: repeat;
    background-position: 0 0;
    background-position: center;
    background-attachment: scroll !important;
    {% unless section.settings.background_image_sp == blank %}
      background-image: url('{{ section.settings.background_image_sp | image_url: width: 781 }}');
      background-size: 781px 498px;
    {% else %}
      background-image: url('{{ section.settings.background_image | image_url: width: 1365 }}');
      background-size: 1365px 498px;
    {% endunless %}
  }
  .global-media-settings {
    border: none !important; 
  }
  .image-with-text__content>*+* {
    margin-top: 0;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      {% unless section.settings.background_image == blank %}
        background-image: url('{{ section.settings.background_image | image_url: width: 1365 }}');
        background-size: 1365px 498px;
      {% endunless %}
    }
    .section-{{ section.id }}-padding .grid--3-col-tablet .grid__item {
      width: 45%;
    }
    .section-{{ section.id }}-padding .image-with-text__grid .grid__item.image-with-text__text-item {
      margin-left: 0;
      margin-right: 10rem;
    }
    .section-{{ section.id }}-padding .image-with-text__grid.image-with-text__grid--reverse .grid__item.image-with-text__text-item {
      margin-left: 10rem;
      margin-right: 0;
    }
    .section-{{ section.id }}-padding .grid__item.image-with-text__text-item .image-with-text__content {
      padding-top: 0;
      padding-bottom: 0;
    }
    .section-{{ section.id }}-padding .multirow__inner {
      row-gap: 0;
    }
  }
{%- endstyle -%}

{%- liquid
  if section.settings.image_layout contains 'right'
    assign odd_class = ' image-with-text__grid--reverse'
  else
    assign even_class = ' image-with-text__grid--reverse'
  endif

  if section.settings.row_color_scheme == section.settings.section_color_scheme
    assign no_content_background = true
  endif

  if settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0
    assign no_content_styles = true
  endif

  if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0
    assign borders_class = ' collapse-borders'
  endif

  if no_content_background and no_content_styles
    assign padding_class = ' collapse-padding'
  endif

  unless no_content_background and no_content_styles
    assign corners_class = ' collapse-corners'
  endunless
-%}

<div class="multirow section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
  <div class="multirow__inner">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'heading' -%}
          <h2
            class="h2-{{ block.id }} rich-text__heading rte inline-richtext {{ block.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {{ block.shopify_attributes }}
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            {{ block.settings.heading }}
          </h2>
          <style>
            .h2-{{ block.id }} {
              text-align: {{ block.settings.heading_align }};
              padding-top: {{ block.settings.padding_top | times: 0.75 | round: 0 }}px;
              padding-bottom: {{ block.settings.padding_bottom | times: 0.75 | round: 0 }}px;
              color: {{ block.settings.heading_color }};
              font-weight: {{ block.settings.heading_fontweight }};
              line-height: {{ block.settings.heading_lineheight_mobile }};
              letter-spacing: {{ block.settings.heading_letterspacing_mobile }}rem;
              font-size: {{ block.settings.heading_size_mobile }}px;
            }
            @media screen and (min-width: 750px) {
              .h2-{{ block.id }} {
                padding-top: {{ block.settings.padding_top }}px;
                padding-bottom: {{ block.settings.padding_bottom }}px;
                line-height: {{ block.settings.heading_lineheight_desktop }};
                letter-spacing: {{ block.settings.heading_letterspacing_desktop }}rem;
                font-size: {{ block.settings.heading_size_desktop }}px;
              }
            }
          </style>
        {%- when 'row' -%}
          <div
            class="image-with-text-{{ block.id }} image-with-text isolate{{ borders_class }}{{ corners_class }}{{ padding_class }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {{ block.shopify_attributes }}
          >
            <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.image_layout contains 'alternate' %}{% cycle odd_class, even_class %}{% else %}{{ odd_class }}{% endif %}">
              <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">
                <div
                  class="image-with-text__media image-with-text__media--{{ section.settings.image_height }} gradient color-{{ section.settings.row_color_scheme }} global-media-settings{% if block.settings.image != blank %} media{% else %} image-with-text__media--placeholder placeholder{% endif %}"
                >
                  {%- if block.settings.image != blank -%}
                    {%- capture sizes -%}
                      (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                      (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                    {%- endcapture -%}
                    {%- if block.settings.image_sp == blank -%}
                    {{
                      block.settings.image
                      | image_url: width: 1500
                      | image_tag: sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
                    }}
                    {%- else -%}
                      <picture>
                        <source 
                          media="(max-width: 740px)"
                          srcset="{{ block.settings.image_sp | image_url }}"
                          loading="lazy">
                          {{
                            block.settings.image
                            | image_url: width: 1500
                            | image_tag: sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
                          }}
                      </picture>
                    {%- endif -%}
                  {%- else -%}
                    {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                </div>
                <style>
                  .image-with-text-{{ block.id }} .image-with-text__media {
                    {% if section.settings.image_height == 'adapt' %}
                      {% if block.settings.image_sp != blank %}
                        padding-bottom: {{ 1 | divided_by: block.settings.image_sp.aspect_ratio | times: 100 }}%;
                      {% else %}
                        padding-bottom: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;
                      {% endif %}
                    {% endif %}
                  }
                  @media screen and (min-width: 750px) {
                    .image-with-text-{{ block.id }} .image-with-text__media {
                      {% if section.settings.image_height == 'adapt' and block.settings.image != blank %}
                        padding-bottom: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;
                      {% endif %}
                    }
                  }
                </style>
              </div>
              <div class="image-with-text__text-item grid__item">
                <div class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.image_height }} content-container{% unless no_content_background and no_content_styles %} gradient color-{{ section.settings.row_color_scheme }}{% else %} background-transparent{% endunless %}">
                  {%- if block.settings.caption -%}
                    <p class="image-with-text__text image-with-text__text--caption caption-with-letter-spacing caption-with-letter-spacing--medium">
                      {{ block.settings.caption | escape }}
                    </p>
                  {%- endif -%}
                  {%- if block.settings.heading != blank -%}
                    <h2 class="heading-{{ block.id }} image-with-text__heading {{ section.settings.heading_size }} rte">
                      {{ block.settings.heading }}
                    </h2>
                    <style>
                      .heading-{{ block.id }} {
                        text-align: {{ block.settings.heading_align }};
                        padding-top: {{ block.settings.heading_padding_top | times: 0.75 | round: 0 }}px;
                        padding-bottom: {{ block.settings.heading_padding_bottom | times: 0.75 | round: 0 }}px;
                        color: {{ block.settings.heading_color }};
                        font-weight: {{ block.settings.heading_fontweight }};
                        line-height: {{ block.settings.heading_lineheight_mobile }};
                        letter-spacing: {{ block.settings.heading_letterspacing_mobile }}rem;
                        font-size: {{ block.settings.heading_size_mobile }}px;
                        border-bottom: 1px solid {{ block.settings.heading_border_color }};
                        width: 100%;
                      }
                      @media screen and (min-width: 750px) {
                        .heading-{{ block.id }} {
                          padding-top: {{ block.settings.heading_padding_top }}px;
                          padding-bottom: {{ block.settings.heading_padding_bottom }}px;
                          line-height: {{ block.settings.heading_lineheight_desktop }};
                          letter-spacing: {{ block.settings.heading_letterspacing_desktop }}rem;
                          font-size: {{ block.settings.heading_size_desktop }}px;
                        }
                      }
                    </style>
                  {%- endif -%}
                  {%- if block.settings.text -%}
                    <div class="text-{{ block.id }} image-with-text__text rte {{ section.settings.text_style }}">{{ block.settings.text }}</div>
                    <style>
                      .text-{{ block.id }} {
                        padding-top: {{ block.settings.text_padding_top | times: 0.75 | round: 0 }}px;
                        padding-bottom: {{ block.settings.text_padding_bottom | times: 0.75 | round: 0 }}px;
                        color: {{ block.settings.text_color }};
                        font-weight: {{ block.settings.text_fontweight }};
                        font-size: {{ block.settings.text_size_mobile }}px;
                        line-height: {{ block.settings.text_lineheight_mobile }};
                        letter-spacing: {{ block.settings.text_letterspacing_mobile }}rem;
                      }
                      @media screen and (min-width: 750px) {
                        .text-{{ block.id }} {
                          padding-top: {{ block.settings.text_padding_top }}px;
                          padding-bottom: {{ block.settings.text_padding_bottom }}px;
                          font-size: {{ block.settings.text_size_desktop }}px;
                          line-height: {{ block.settings.text_lineheight_desktop }};
                          letter-spacing: {{ block.settings.text_letterspacing_desktop }}rem;
                        }
                      }
                    </style>
                  {%- endif -%}
                  {%- if block.settings.button_label != blank -%}
                    <a
                      {% if block.settings.button_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link }}"
                      {% endif %}
                      class="button button--{{ section.settings.button_style }}"
                    >
                      {{ block.settings.button_label | escape }}
                    </a>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
          <style>
            .image-with-text-{{ block.id }} {
              padding-top: {{ block.settings.padding_top | times: 0.75 | round: 0 }}px;
              padding-bottom: {{ block.settings.padding_bottom | times: 0.75 | round: 0 }}px;
            }
            .section-{{ section.id }}-padding .image-with-text-{{ block.id }} .grid__item.image-with-text__text-item .image-with-text__content {
              padding-top: 3rem;
              padding-bottom: 3rem;
              padding-right: 0;
              padding-left: 0;
            }
            .section-{{ section.id }}-padding .image-with-text-{{ block.id }} .image-with-text__grid {
              padding-left: 0;
              padding-right: 3rem;
            }
            .section-{{ section.id }}-padding .image-with-text-{{ block.id }} .image-with-text__grid.image-with-text__grid--reverse {
              padding-left: 3rem;
              padding-right: 0;
            }
            .section-{{ section.id }}-padding .image-with-text-{{ block.id }} .image-with-text__grid .grid__item.image-with-text__text-item .image-with-text__content {
              padding-left: 3rem;
            }
            .section-{{ section.id }}-padding .image-with-text-{{ block.id }} .image-with-text__grid.image-with-text__grid--reverse .grid__item.image-with-text__text-item .image-with-text__content {
              padding-right: 3rem;
            }
            @media screen and (min-width: 750px) {
              .image-with-text-{{ block.id }} {
                padding-top: {{ block.settings.padding_top }}px;
                padding-bottom: {{ block.settings.padding_bottom }}px;
              }
              .section-{{ section.id }}-padding .image-with-text-{{ block.id }} .grid__item.image-with-text__text-item .image-with-text__content {
                padding-top: 0;
                padding-bottom: 0;
                padding-right: 0;
                padding-left: {{ block.settings.image_and_text_gap }}rem;
              }
              .section-{{ section.id }}-padding .image-with-text-{{ block.id }} .image-with-text__grid.image-with-text__grid--reverse .grid__item.image-with-text__text-item .image-with-text__content {
                padding-right: {{ block.settings.image_and_text_gap }}rem;
                padding-left: 0;
              }
              .section-{{ section.id }}-padding .image-with-text-{{ block.id }} .image-with-text__grid.image-with-text__grid--reverse {
                padding-left: 0;
              }
            }
          </style>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>

