<script>
document.addEventListener("DOMContentLoaded", () => {
  const carousel = document.querySelector(".carousel-area");
  const dots = document.querySelectorAll(".carousel-pagination span");
  let slides = Array.from(carousel.children);

  // クローン追加でループ対応
  const firstClone = slides[0].cloneNode(true);
  const lastClone = slides[slides.length - 1].cloneNode(true);
  carousel.insertBefore(lastClone, slides[0]);
  carousel.appendChild(firstClone);

  slides = Array.from(carousel.children);
  let currentIndex = 1; // 真ん中スタート（最初のクローン分1から）
  let slideWidth;

  function updateSlideWidth() {
    // contentのoffsetWidthを直接取得（padding分含めて正確に）
    slideWidth = slides[currentIndex].offsetWidth;
  }

  function setPosition() {
    updateSlideWidth();
    carousel.style.transition = "none";
    carousel.style.transform = `translateX(${-slideWidth * currentIndex}px)`;
    updateDots(); // ここを追加
  }
  
  // 初期セット
  setTimeout(setPosition, 50);


  function moveToSlide(index) {
    carousel.style.transition = "transform 0.3s ease";
    carousel.style.transform = `translateX(${-slideWidth * index}px)`;
    updateDots();
  }

  function updateDots() {
    // currentIndex はクローンを含むため、実際のスライド番号を計算
    const totalSlides = slides.length - 2; // クローンを除いた本来のスライド数
    const realIndex = (currentIndex + totalSlides) % totalSlides;
  
    dots.forEach((dot, i) => {
      dot.classList.toggle("active", i === realIndex);
    });
  }


  function handleTransitionEnd() {
    if (slides[currentIndex] === slides[0]) {
      currentIndex = slides.length - 2;
      setPosition();
    }
    if (slides[currentIndex] === slides[slides.length - 1]) {
      currentIndex = 1;
      setPosition();
    }
    updateDots();
  }

  // フリック用
  let startX = 0;
  let currentX = 0;
  let isDragging = false;

  function startDrag(e) {
    isDragging = true;
    startX = e.type.includes("mouse") ? e.pageX : e.touches[0].pageX;
    carousel.style.transition = "none";
  }

  function onDrag(e) {
    if (!isDragging) return;
    currentX = e.type.includes("mouse") ? e.pageX : e.touches[0].pageX;
    const delta = currentX - startX;
    carousel.style.transform = `translateX(${-slideWidth * currentIndex + delta}px)`;
  }

  function endDrag() {
    if (!isDragging) return;
    isDragging = false;
    const delta = currentX - startX;

    if (delta > 50) currentIndex--;
    else if (delta < -50) currentIndex++;

    moveToSlide(currentIndex);
  }

  // ドットクリック対応
  dots.forEach((dot, i) => {
    dot.addEventListener("click", () => {
      currentIndex = i + 1;
      moveToSlide(currentIndex);
    });
  });

  // イベント登録
  carousel.addEventListener("transitionend", handleTransitionEnd);
  window.addEventListener("resize", setPosition);

  carousel.addEventListener("touchstart", startDrag);
  carousel.addEventListener("touchmove", onDrag);
  carousel.addEventListener("touchend", endDrag);
  carousel.addEventListener("mousedown", startDrag);
  carousel.addEventListener("mousemove", onDrag);
  carousel.addEventListener("mouseup", endDrag);
  carousel.addEventListener("mouseleave", endDrag);

  updateDots();
});
</script>











        
