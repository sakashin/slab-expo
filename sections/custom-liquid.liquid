{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
    {% unless section.settings.background_image_sp == blank %}
      {%- assign background_image_sp_width = section.settings.background_image_width | default: 780 -%}
      {%- assign background_image_sp_width_triple = background_image_sp_width | times: 3 -%}
      {%- assign background_image_sp_height = section.settings.background_image_height | default: 498 -%}
      background-image: url('{{ section.settings.background_image_sp | image_url: width: background_image_sp_width_triple }}');
      background-size: {{ background_image_sp_width }}px {{ background_image_sp_height }}px;
    {% else %}
      {%- assign background_image_width = section.settings.background_image_width | default: 1375 -%}
      {%- assign background_image_width_triple = background_image_width | times: 3 -%}
      {%- assign background_image_height = section.settings.background_image_height | default: 780 -%}
      background-image: url('{{ section.settings.background_image | image_url: width: background_image_width_triple }}');
      background-size: {{ background_image_width }}px {{ background_image_height }}px;
    {% endunless %}
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      {% unless section.settings.background_image == blank %}
        {%- assign background_image_width = section.settings.background_image_width | default: 1375 -%}
        {%- assign background_image_width_triple = background_image_width | times: 3 -%}
        {%- assign background_image_height = section.settings.background_image_height | default: 780 -%}
        background-image: url('{{ section.settings.background_image | image_url: width: background_image_width_triple }}');
        background-size: {{ background_image_width }}px {{ background_image_height }}px;
      {% endunless %}
    }
  }
{%- endstyle -%}
<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding">
    {{ section.settings.custom_liquid }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.custom-liquid.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "t:sections.custom-liquid.settings.custom_liquid.label",
      "info": "t:sections.custom-liquid.settings.custom_liquid.info"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "背景画像"
    },
    {
      "type": "text",
      "id": "background_image_width",
      "label": "背景画像横サイズ"
    },
    {
      "type": "text",
      "id": "background_image_height",
      "label": "背景画像縦サイズ"
    },
    {
      "type": "image_picker",
      "id": "background_image_sp",
      "label": "背景画像（モバイル）"
    },
    {
      "type": "text",
      "id": "background_image_sp_width",
      "label": "背景画像（モバイル）横サイズ"
    },
    {
      "type": "text",
      "id": "background_image_sp_height",
      "label": "背景画像（モバイル）縦サイズ"
    }
  ],
  "presets": [
    {
      "name": "t:sections.custom-liquid.presets.name"
    }
  ]
}
{% endschema %}
